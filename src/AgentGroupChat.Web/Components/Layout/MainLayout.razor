<div id="blazor-error-ui" style="display:none;" data-nosnippet>
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">ðŸ—™</a>
</div>

<script>
    // Only show error UI when Blazor actually encounters an error
    window.Blazor?.start().catch(error => {
        document.getElementById('blazor-error-ui').style.display = 'flex';
    });
    
    // Handle dismiss button
    document.addEventListener('DOMContentLoaded', () => {
        const errorUI = document.getElementById('blazor-error-ui');
        const dismissBtn = errorUI?.querySelector('.dismiss');
        
        if (dismissBtn) {
            dismissBtn.addEventListener('click', () => {
                errorUI.style.display = 'none';
            });
        }
    });
</script>

