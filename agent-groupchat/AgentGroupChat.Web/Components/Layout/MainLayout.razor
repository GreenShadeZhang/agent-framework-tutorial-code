@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MudLayout>
    <MudAppBar Elevation="2" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Chat" Color="Color.Inherit" Edge="Edge.Start" />
        <MudText Typo="Typo.h6" Class="ml-3">Agent Group Chat Platform</MudText>
        <MudSpacer />
        <MudButton Href="/" Color="Color.Inherit" StartIcon="@Icons.Material.Filled.Chat">Chat</MudButton>
        <MudButton Href="/admin" Color="Color.Inherit" StartIcon="@Icons.Material.Filled.Settings">Admin</MudButton>
        <MudIconButton Icon="@Icons.Material.Filled.Help" Color="Color.Inherit" Href="https://learn.microsoft.com/aspnet/core/" Target="_blank" />
    </MudAppBar>
    
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-0" Style="height: 100%;">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui" style="display:none;" data-nosnippet>
    <MudAlert Severity="Severity.Error" Variant="Variant.Filled">
        An unhandled error has occurred.
        <MudButton OnClick="@Reload" Color="Color.Inherit" Size="Size.Small">Reload</MudButton>
        <MudIconButton Icon="@Icons.Material.Filled.Close" OnClick="@Dismiss" Color="Color.Inherit" Size="Size.Small" />
    </MudAlert>
</div>

@code {
    private void Reload()
    {
        NavigationManager.NavigateTo(NavigationManager.Uri, forceLoad: true);
    }

    private void Dismiss()
    {
        // This will be handled by JavaScript in the browser
    }
}
